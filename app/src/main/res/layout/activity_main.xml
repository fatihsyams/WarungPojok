<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="5"
    tools:context=".MainActivity">


    <View
        android:id="@+id/view"
        android:layout_width="235dp"
        android:layout_height="0dp"
        android:background="@color/base_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLogoWpHome"
        android:layout_width="166dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogoWpHome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="15sp"
        android:gravity="center"
        android:text="Warung Pojok"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imgLogoWpHome"
        app:layout_constraintStart_toStartOf="@+id/imgLogoWpHome"
        app:layout_constraintTop_toBottomOf="@+id/imgLogoWpHome" />

    <TextView
        android:id="@+id/tvPesananMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="15sp"
        android:gravity="center"
        android:text="Pesanan"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/tvInputMenuMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="15sp"
        android:gravity="center"
        android:text="Input Menu"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvPesananMain"
        app:layout_constraintStart_toStartOf="@+id/tvPesananMain"
        app:layout_constraintTop_toBottomOf="@+id/tvPesananMain" />

    <!--    <FrameLayout-->
    <!--        android:id="@+id/container"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:layout_weight="4"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent">-->


    <!--    </FrameLayout>-->

    <TextView
        android:id="@+id/tvJournalMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="15sp"
        android:gravity="center"
        android:text="Journal"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvInputMenuMain"
        app:layout_constraintStart_toStartOf="@+id/tvInputMenuMain"
        app:layout_constraintTop_toBottomOf="@+id/tvInputMenuMain" />

    <TextView
        android:id="@+id/tvCekStokMain"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeStepGranularity="15sp"
        android:gravity="center"
        android:text="Cek Stok"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvJournalMain"
        app:layout_constraintStart_toStartOf="@+id/tvJournalMain"
        app:layout_constraintTop_toBottomOf="@+id/tvJournalMain" />

<!--    <androidx.constraintlayout.widget.Guideline-->
<!--        android:id="@+id/guideline"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="vertical"-->
<!--        app:layout_constraintGuide_begin="246dp" />-->

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>